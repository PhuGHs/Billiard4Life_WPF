<!DOCTYPE html>
<html>
<head>
    <style>
        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
        }

        .form-group {
            margin-bottom: 1em;
        }

        label {
            display: block;
            margin-bottom: 0.5em;
        }

        input[type="text"], input[type="datetime-local"], select, textarea {
            width: 100%;
            background-color: white;
            padding: 0.5em;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 0.5em 1em;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }

        /* Resetting form styling */
        input, select, textarea, button {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-color: transparent;
            border: none;
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <!-- Your form -->
    <div class="block">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-8 pb-4">
                <div class="row mb-5">
                    <div class="col-lg-4">
                    </div>
                    <div class="col-lg-4" style="margin-top: 40px">
                        <div class="service no-shadow align-items-center link horizontal d-flex active" data-aos="fade-left" data-aos-delay="0">
                            <div class="service-contents">
                                <p>Hãy điền thông tin đặt bàn của bạn vào bảng</p>
                            </div> <!-- /.service-contents-->
                        </div> <!-- /.service -->
                    </div>
                    <div class="col-lg-4">
                    </div>
                </div>
                <form>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label class="text-black" for="fname">Tên khách hàng</label>
                                <input type="text" class="form-control" id="fname">
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label class="text-black" for="lname">Số điện thoại</label>
                                <input type="text" class="form-control" id="lname">
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label class="text-black" for="email">Email</label>
                                <input type="text" class="form-control" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="text-black" for="email">Loại bàn muốn đặt</label>
                                <select class="form-control" id="tableType">
                                    <option value="table1">Carom</option>
                                    <option value="table2">Libre</option>
                                    <option value="table3">Pool</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="text-black" for="datetime">Thời gian muốn đặt</label>
                                <input type="datetime-local" class="form-text" name="datetime">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-5">
                        <label class="text-black" for="message">Ghi chú</label>
                        <textarea name="" class="form-control" id="message" cols="30" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary-hover-outline">Đặt bàn</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>